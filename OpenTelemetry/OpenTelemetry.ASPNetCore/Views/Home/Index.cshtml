@using Microsoft.Extensions.Configuration

@model List<OpenTelemetry.ASPNetCore.ViewModels.WeatherForecastViewModel>

@inject IConfiguration Configuration

@{ var backendUrl = Configuration.GetServiceUri("backend"); }


@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-4">
    @foreach (var weatherForecast in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                @*<img class="bd-placeholder-img card-img-top" src="@backendUrl/@weatherForecast.Date" />*@
                <div class="card-body">
                    <p class="card-text">@weatherForecast.Date</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                        <small class="text-muted">9 mins</small>
                    </div>
                </div>
            </div>
        </div>}
</div>
